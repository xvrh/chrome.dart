{
  "manifest_version": 3,
  "name": "simple_extension",
  "version": "1.0",
  "description": "unit tests for chrome extension APIs",
  "permissions": [
    "accessibilityFeatures.read",
    "accessibilityFeatures.modify",
    "activeTab",
    "action",
    "alarms",
    "bookmarks",
    "browsingData",
    "contextMenus",
    "declarativeNetRequest",
    "tabs",
    "notifications",
    "privacy",
    "storage",
    "system",
    "system.cpu",
    "system.display",
    "system.memory",
    "system.network",
    "system.storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "action": {}
}

